extends layout.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/user-register.css")



include utils.pug

block content
    +validationErrorSummary(errors)
    div(class='container1')
        img(id='title' src='../images/Title.png')

    form(action='/users/register' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('User Name', 'username', user.username)
        +field('First Name', 'firstName', user.firstName)
        +field('Last Name', 'lastName', user.lastName)
        +field('Email', 'email', user.email)
        +field('Password', 'password', user.password, 'password')
        +field('Confirm Password', 'confirmPassword', '', 'password')
        +field('State', 'state', user.state)
        div(class='register-btn')
            button(type='submit' class='register-form-btn') Register
    div
        p: a(href='/users/login') Already have an account?
