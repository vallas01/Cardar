extends layout.pug

block content 
  div.profile-wrapper  
    div.left-side
      h1 #{user.firstName} #{user.lastName}
    div.right-side
      div.email
        h3 Email
        p #{user.email}
      div.state
        h3 State
        p #{user.state}
      div.bio
        h3 Bio
        p #{user.bio}
      div.member
        h3 Member Since
        p #{user.createdAt}
    div.posts
      ul Your Posts 
        each post in posts 
          div.post-block
            li: a(href=`/posts/${post.id}`) #{post.make} #{post.model}
      
      