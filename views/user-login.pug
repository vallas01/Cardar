extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action='/users/login' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Email Address', 'email', email)
        +field('Password', 'password', null, 'password')
        div(class='login-btn')
            button(type='submit' class='login-form-btn') Login
    div
        p: a(href='/users/register') Don't have an account?
        p: a(href='') Demo User
