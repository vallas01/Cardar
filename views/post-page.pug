extends layout.pug

append head

  //- add page specific js
  script(src="/javascripts/postDelete.js" type="module" defer)


block content
  div.profile-block
    p(style="display:none" id='hiddenId') #{post.id}
    p(style="display:none" id='hiddenUserId') #{post.ownerId}
    div.upper-block
      div.img_container
        img(src='../images/jeepWrangler.jpeg' height='50px' width='70px' class='carImage')

      //- h1 #{post.name}
      div.make_mod_yr
        p.left-align #{post.make}
        p.left-align #{post.model}
        p.left-align #{post.year}

    div.lower-block
      div.owner
      div.description
        p.right-align Description: #{post.description}
      //- p.right-align Color: #{post.color}
      div.accidents
        p.right-align Accidents: #{post.accidents}
      ul Comments
        each comment in comments
          li #{comment.message}


    div.buttons
      button.edit-btn EDIT
      button.delete-btn DELETE
