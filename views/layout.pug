doctype html
html
  head
      block head
        title Cardar - #{title}
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/user-profile.css')
  body
    nav(class='nav-bar')
      span(class='left-nav-bar')
        a(href='/'): img(class='cardar-logo' src='../images/Cardar_white.png' )
        a(href='/'): img(id='cardar-logo-name' src='../images/CARDAR_small.png' )
        form(action="/search")
          input(type="search" name="searchedInput" placeholder="Search" required)
          button(type="submit") Find your car
        div
        div
      if locals.authenticated
        a(href=`/users/${user.id}`): img(class='user-profile-icon' src='../images/user-profile-icon.png' width='50px' height='50px')
        a(href=`/posts/new`): img(class='add-post-icon' src='../images/add-post-icon.png' width='35px' height='30px')
        div
          form(class='logout-btn' action='/users/logout' method='post')
            button(class='logout-btn' href='/users/logout') Logout
      else
        span(class='user-auth')
          a(class='nav-btn' href='/users/login') LOGIN
          a(class='nav-btn' href='/users/register') REGISTER
    block content
